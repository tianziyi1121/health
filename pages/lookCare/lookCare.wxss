.purchase > view:nth-child(1) { color: #ff0000;}
.purchase > view:nth-child(2){ width: 200rpx; background: #37cf6b; color: #fff;}
.borderButton { height: 2rpx; background: #ccc;}
/* pop-up */
.titlePopUp .shadow { top: 84rpx; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); z-index: 1000; opacity: 0;}
.popUpContent {left: 0; width: 100%; background: #f5f5f5; z-index: 1001; opacity: 0;}
.popUpContent > view { width: 690rpx; margin: 0 auto; display: flex; flex-direction: row; flex-wrap: wrap;}
.popUpContent > view > view { width: 33.3%; text-align: center; padding: 16rpx 0;}
.popUpContent > view > view  { display: inline-block;}
.titlePopUp .upward { animation: upward 0.5s 0.2s linear forwards;}
@keyframes upward {
  0%{ top: 384rpx; opacity: 0;}
  50%{ top: 234rpx; opacity: 1;}
  100%{ top: 84rpx; opacity: 1;}
}
.titlePopUp .downward { animation: downward 0.5s linear forwards;}
@keyframes downward {
  0%{ top: 84rpx; opacity: 1;}
  50%{ top: 234rpx; opacity: 1;}
  100%{ top: 384rpx;opacity: 0;}
}
.titlePopUp .shadow.upward1 { animation: upward1 0.2s linear forwards;}
@keyframes upward1 {
  0%{ opacity: 0;}
  100%{ opacity: 1;}
}
.titlePopUp .shadow.downward1 { animation: downward1 0.2slinear forwards;}
@keyframes downward1 {
  0%{ opacity: 1;}
  100%{ opacity: 0;}
}
.active { color: #37cf6b;}