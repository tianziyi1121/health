.right .rightContent > view { max-width: 420rpx;}
.rightContent .title > view:nth-child(2){  margin-left: 16rpx; height: 24rpx; line-height: 24rpx; border: 2rpx solid #37cf6b; padding: 0 10rpx; border-radius:10rpx;}
.right .collect image { width: 34rpx; height: 34rpx;}
.right .collect > view { display: inline-block;}
.contentLine { height: 2rpx; background: #ccc; margin-top: 30rpx;}
.currentList .price > view:nth-child(2) { width: 518rpx;}
